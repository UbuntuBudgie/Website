<header class="bg-black">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center text-white mr-12">
          <img src="https://ubuntubudgie.org/wp-content/uploads/2024/03/UbuntuBudgie-Wordmark-whiteblackalt.svg" alt="Ubuntu Budgie Logo" class="h-8"/>
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-white hover:text-gray-300">Home</a>
        <a href="/about/" class="text-white hover:text-gray-300">About Us</a>
        <a href="/downloads" class="text-white hover:text-gray-300">Downloads</a>
        <a href="/donate" class="text-white hover:text-gray-300">Donate</a>
        <a href="/blog" class="text-white hover:text-gray-300">Blog</a>
        <a href="/team" class="text-white hover:text-gray-300">Our Team</a>
        <a href="/gallery" class="text-white hover:text-gray-300">Gallery</a>
        <a href="/contact" class="text-white hover:text-gray-300">Contact</a>
        <a href="https://discourse.ubuntubudgie.org" target="_blank" rel="noopener noreferrer" class="text-white hover:text-gray-300">Support</a>
      </nav>
      
      <!-- Mobile menu button -->
      <button id="mobile-menu-button" class="md:hidden text-white focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <a href="/" class="block py-2 text-white hover:text-gray-300">Home</a>
      <a href="/about-us" class="block py-2 text-white hover:text-gray-300">About Us</a>
      <a href="/downloads" class="block py-2 text-white hover:text-gray-300">Downloads</a>
      <a href="/donate" class="block py-2 text-white hover:text-gray-300">Donate</a>
      <a href="/blog" class="block py-2 text-white hover:text-gray-300">Blog</a>
      <a href="/our-team" class="block py-2 text-white hover:text-gray-300">Our Team</a>
      <a href="/gallery" class="block py-2 text-white hover:text-gray-300">Gallery</a>
      <a href="/contact" class="block py-2 text-white hover:text-gray-300">Contact</a>
      <a href="https://discourse.ubuntubudgie.org" target="_blank" rel="noopener noreferrer" class="block py-2 text-white hover:text-gray-300">Support</a>
    </div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    });
  </script>
</header>
